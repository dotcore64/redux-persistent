{
  "extends": ["airbnb-base", "plugin:n/recommended", "plugin:unicorn/recommended"],
  "plugins": ["n", "unicorn"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "unicorn/prevent-abbreviations": 0,
    "unicorn/no-array-for-each": 0,
    "unicorn/no-null": 0
  },
  "overrides": [
    {
      "files": ["test/{,**}/*.js?(x)"],
      "extends": ["plugin:mocha/recommended"],
      "plugins": ["mocha"],
      "env": {
        "mocha": true
      },
      "rules": {
        "mocha/no-mocha-arrows": 0
      }
    }
  ]
}
